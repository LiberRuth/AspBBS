@{
    ViewData["Title"] = "View Page";
}
<style>
    .card_main_box_border {
        border-left: none;
        border-right: none;
        border-top: 2px solid Gray;
        border-bottom: 2px solid Gray;
    }
</style>
<h4 class="text-center">
    <a href="/list/@ViewBag.gall_id" style="color: #212529; text-decoration: none;">게시판</a>
</h4>
<div class="d-flex justify-content-center">
    <div class="hstack gap-2">
        <h3>@Model.Title</h3>
    </div>
</div>
<div class="hstack">
    <div class="hstack gap-1 p-2">
        <div>@Model.Username</div>
    </div>
    <div class="p-2 ms-auto">@Model.CreatedAt</div>
</div>
<div class="mx-auto p-0">
    <div class="card card_main_box_border rounded-0 mb-2">
        <div class="card-body">
            <div class="mt-3 mb-3">
                <div>@Html.Raw(Model.Text!)</div>
            </div>
        </div>
    </div>
</div>
